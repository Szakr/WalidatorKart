<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Podaj numer karty" GridPane.halignment="LEFT" />
      <Button mnemonicParsing="false" onAction="#onBtnFileCheckClick" text="Wybierz plik" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="textField" GridPane.columnIndex="1" />
      <Button mnemonicParsing="false" onAction="#onBtnCheckClick" text="Sprawdź" GridPane.columnIndex="2" />
      <Label text="Lista numerów" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP" />
   </children>
